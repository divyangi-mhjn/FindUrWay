<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hp.major.FindUrWay.ImagesActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"

            >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardw"
        android:elevation="2dp"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:text="Journey Time:"
            android:fontFamily="serif"
            android:id="@+id/tv1"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tv2"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:fontFamily="serif"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Cross By Stations:"
        android:textStyle="bold"
        android:layout_below="@+id/cardw"
        android:id="@+id/tv3"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv3"
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/recycler_view"
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/recycler_view1"
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>