<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hp.major.FindUrWay.GateActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:id="@+id/tt"
        android:src="@drawable/stt"
        android:scaleType="fitXY"
        
        android:gravity="center_vertical|center_horizontal"/>

    <AutoCompleteTextView
        android:id="@+id/autocompleteEditTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text=""
        android:layout_below="@+id/tt"
        android:hint="Enter Station Name"
        android:textColorHint="#afafaf"
        android:textColor="#6c6c6c"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn"
        android:layout_below="@+id/autocompleteEditTextView1"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textStyle="bold"
        android:background="@color/colorPrimary"

        android:elevation="3dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
