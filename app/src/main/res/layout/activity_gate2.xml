<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hp.major.FindUrWay.Gate2Activity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"

        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="4dp"
            android:contentInsetLeft="3dp">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"


        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_below="@+id/t1">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gatew"
    android:layout_below="@+id/t1"
    android:elevation="3dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trr"
        android:text="Gates:"
        android:fontFamily="serif"
        android:textStyle="bold"

        android:textSize="22dp"/>

    <ListView
        android:id="@+id/listViewGate1"
        android:layout_below="@+id/trr"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        > </ListView>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gatew1"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:layout_below="@+id/listViewGate1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trr1"
            android:text="Platforms:"
            android:fontFamily="serif"
            android:textStyle="bold"

            android:textSize="22dp"/>

        <ListView
            android:id="@+id/listViewGate2"
            android:layout_below="@+id/trr1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            > </ListView>
    </android.support.v7.widget.CardView>
</LinearLayout>



</RelativeLayout>

