<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hp.major.FindUrWay.BusActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"

            >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:id="@+id/ig"
        android:src="@drawable/img"
        android:layout_below="@+id/appbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inter State Bus Stands "
        android:elevation="3dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/an"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/ig"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/an1"
        android:elevation="3dp"
        android:background="@drawable/outline"
        android:text="KASHMERE GATE"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/an"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SARAI KALE KHAN"
        android:elevation="3dp"
        android:background="@drawable/outline"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/an2"
        android:layout_below="@+id/an1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:background="@drawable/outline"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="ANAND VIHAR"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginRight="20dp"
        android:id="@+id/an3"
        android:layout_below="@+id/an2"/>




</RelativeLayout>
