<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hp.major.FindUrWay.MetroFareActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <AutoCompleteTextView
        android:id="@+id/autocompleteEditTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:text=""
        android:hint="Enter Start Point"
        android:textColorHint="#afafaf"
        android:textColor="#6c6c6c"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <AutoCompleteTextView
        android:id="@+id/autocompleteEditTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter End Point"
        android:textColorHint="#afafaf"
        android:layout_below="@+id/autocompleteEditTextView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:text=""
        android:textColor="#6c6c6c" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn"
        android:layout_below="@+id/autocompleteEditTextView2"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:text="Find Fare"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/c1"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"
        android:elevation="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fare:"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:id="@+id/f1"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/f2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:fontFamily="serif"
            android:textSize="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/c2"
        android:elevation="3dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btn"
        android:layout_toRightOf="@+id/c1"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Token Fare:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:id="@+id/f3"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:id="@+id/f4"

                android:fontFamily="serif"
                android:textSize="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>



</RelativeLayout>
